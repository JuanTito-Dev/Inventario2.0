@{
    ViewData["Title"] = "Lista de sliders";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de sliders</h2>
        </div>
        <div class="col-4">
            <a asp-controller="Sliders" asp-action="Crear" class="btn btn-primary"><i class="fa-regular fa-square-plus"></i> Crear nueva categoria</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblSliders" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Imagen</th>
                <th>Nombre</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>

    </table>
</div>

@section Scripts {
    <script src="~/js/Sliders.js"></script>
}