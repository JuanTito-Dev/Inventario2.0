@model IEnumerable<InventarioSuperModelos.Usuario>
@{
    ViewData["Title"] = "Usuarios";
    int cont;
}

<br />
<br />

<div class="border">
    <div class="row">
        <div class="col-6">
             <h2>Lista de usuarios</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-info" asp-area="Identity" asp-page="/Account/Register">
                <i class="fa fa-address-book-o" aria-hidden="true"></i>
                 Agregar nuevo usuario
            </a>
        </div>
    </div>
    <br />
    <br />

    @if (Model.Count() > 0)
    {
        <table id="tblCategoria" class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                    <th>@Html.DisplayNameFor(mbox =>mbox.Apellido)</th>
                    <th>@Html.DisplayNameFor(mbox => mbox.Email)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @{
                    cont = 0;
                }
                
                @foreach(var usuario in Model)
                {
                    cont++;
                    <tr>
                        <td>@cont</td>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.Apellido</td>
                        <td>@usuario.Email</td>
                        <td>
                            @if (usuario.LockoutEnd == null || usuario.LockoutEnd < DateTime.Now)
                            {
                                <a class="btn btn-success" asp-area="Admin" asp-action="Bloquear" asp-route-id="@usuario.Id">
                                    <i class="fa fa-lock" aria-hidden="true"></i>
                                      Bloquear
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-danger" asp-area="Admin" asp-action="Desbloquear" asp-route-id="@usuario.Id">
                                    <i class="fa fa-unlock" aria-hidden="true"></i>
                                     Desbloquear
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No hay usuarios disponibles</p>
    }
</div>
