@{
    ViewData["Title"] = "Lista de Productos";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Categorías</h2>
        </div>
        <div class="col-4">
            <a asp-controller="Productos" asp-action="Crear" class="btn btn-primary"><i class="fa-regular fa-square-plus"></i> Crear nuevo producto</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblProductos" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Imagen</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Categoría</th>
                <th>Acciones</th>
            </tr>
        </thead>

    </table>
</div>

@section Scripts {
    <script src="~/js/Producto.js"></script>
}