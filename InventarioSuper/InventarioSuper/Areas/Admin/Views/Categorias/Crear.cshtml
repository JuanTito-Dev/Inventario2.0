@model InventarioSuperModelos.Categoria;
@{
    ViewData["Title"] = "Crear categoría";
}

<br />
<br />
<h3 class="text-center" >Crear una nueva categoría</h3>

<form asp-action="Crear" method="POST">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-auto">
                    <input asp-for="Nombre" type="text" class="form-control" placeholder="Ingresa el nombre"/>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <br />
            
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                    <label asp-for="Orden"></label>
                </div>
                <div class="col-auto">
                    <input asp-for="Orden" type="number" class="form-control" placeholder="Ingresa el orden" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>
            <br />
            
            <div class="g-3 align-items-center">
                <div class="col-8">
                    <partial name="_VistaCrear"></partial>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}