@{
    ViewData["Title"] = "Lista de categoría";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Categorías</h2>
        </div>
        <div class="col-4">
            <a asp-controller="Categorias" asp-action="Crear" class="btn btn-primary"><i class="fa-regular fa-square-plus"></i> Crear nueva categoria</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblCategoria" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Orden</th>
                <th>Acciones</th>
            </tr>
        </thead>
        
    </table>
</div>

@section Scripts{
    <script src="~/js/Categoria.js"></script>
}