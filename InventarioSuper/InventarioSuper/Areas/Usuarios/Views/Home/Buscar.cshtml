@model InventarioSuperModelos.ListaBuscada<InventarioSuperModelos.Producto>

<h2 class="text-center">Lista de productos buscados </h2>

@if (Model.Count() > 0)
{
    <br />
    <div class="row">
        @foreach (var producto in Model.OrderBy(m => m.Id))
        {
            <div class="col-3">
                <div class="card">
                    <img src="@producto.url" style="width:100%; height:10rem" class="img-thumbnail" />
                    <div class="card-body text-center">
                        <h5 class="card-title">@producto.Nombre</h5>
                        <a class="btn btn-success" style="border-radius:10px" asp-action="detalles" asp-route-id="@producto.Id">
                            Mas información
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No hay resultados de la busqueda</p>
}

<br />
<br />
<!--Crear botones de páginación-->
<div class="text-center">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @(Model.PaginaAnterior ? "" : "disabled")">
                <a class="page-link" asp-controller="Home" asp-action="Buscar" asp-route-pagina="@(Model.PaginaInicio - 1)" asp-route-palabra="@Model.Palabra">Anterior</a>
            </li>
            @for (int i = 1; i <= Model.PaginasTotales; i++)
            {
                <li class="page-item @(i == Model.PaginaInicio ? "active" : "")">
                    <a class="page-link" asp-controller="Home" asp-action="Buscar" asp-route-pagina="@i" asp-route-palabra="@Model.Palabra">@i</a>
                </li>
            }
            <li class="page-item @(Model.PaginaSiguiente ? "" : "disabled")">
                <a class="page-link" asp-controller="Home" asp-action="Buscar" asp-route-pagina="@(Model.PaginaInicio + 1)" asp-route-palabra="@Model.Palabra">Siguiente</a>
            </li>
        </ul>
    </nav>
</div>